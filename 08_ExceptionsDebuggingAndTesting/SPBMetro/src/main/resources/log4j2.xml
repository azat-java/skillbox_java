<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="CorrectInput" fileName="logs/correct-input.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="InputErrors" fileName="logs/input-errors.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="Exceptions" fileName="logs/exceptions.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>

    <loggers>
        <logger name="CorrectInput" level="trace">
            <appender-ref ref="CorrectInput" level="info"/>
        </logger>
        <logger name="InputErrors" level="trace">
            <appender-ref ref="InputErrors" level="info"/>
        </logger>
        <logger name="Exceptions" level="trace">
            <appender-ref ref="Exceptions" level="info"/>
        </logger>
        <Root level="trace">
        </Root>
    </loggers>
</configuration>